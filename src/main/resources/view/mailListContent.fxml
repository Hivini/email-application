<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="BorderPane" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="application.controllers.EmailContentController">
    <top>
        <VBox prefHeight="64.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="From: " />
                        <Label fx:id="fromDetails" />
                    </children>
                </HBox>
                <Label text="Subject:" />
                <Label fx:id="subjectDetails" />
            </children>
        </VBox>
    </top>
    <center>
        <TextArea fx:id="messageDetails" wrapText="true" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
</fx:root>
