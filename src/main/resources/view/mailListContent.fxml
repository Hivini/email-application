<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="200.0" prefWidth="200.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.EmailContentController">
    <top>
        <VBox prefHeight="64.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="From: " />
                        <Label fx:id="fromDetails" />
                    </children>
                </HBox>
                <Label text="Subject:" />
                <Label fx:id="subjectDetails" />
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </VBox>
    </top>
    <center>
        <TextArea fx:id="messageDetails" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="CENTER" />
    </center>
   <padding>
      <Insets bottom="5.0" left="10.0" top="5.0" />
   </padding>
</fx:root>
